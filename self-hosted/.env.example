# ============================================
# OlasPlay Self-Hosted Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# Database
POSTGRES_PASSWORD=your-super-secret-password

# JWT (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# Supabase Keys (generate using supabase CLI or online tools)
# These must match your JWT_SECRET
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

# URLs
SITE_URL=https://olasplay.com
API_EXTERNAL_URL=https://api.olasplay.com

# Additional redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# Disable new signups (true/false)
DISABLE_SIGNUP=false

# SMTP Settings (for email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_ADMIN_EMAIL=admin@olasplay.com

# API Keys for Edge Functions
RAPIDAPI_KEY=your-rapidapi-key
LOVABLE_API_KEY=your-lovable-api-key
